@model IEnumerable<RISING.STAR.DAL.Exams_Table>

@{
    ViewBag.Title = "Exams";
    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}


<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

    <h2>Exams</h2>

    <div class="row">

        <div class="col-md-2">
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
        </div>

        <div class="col-md-2">
            <a href="@Url.Action("AdminDash", "Admin", new { Area = "" })">
                Back to Admin Dashboard
            </a>
        </div>

    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PatientId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateInserted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateExam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OD_Sph)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OD_Cyl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OD_Axis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OS_Sph)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OS_Cyl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OS_Axis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patients_Table.NAME)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateInserted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateExam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OD_Sph)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OD_Cyl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OD_Axis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OS_Sph)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OS_Cyl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OS_Axis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patients_Table.NAME)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

</div>