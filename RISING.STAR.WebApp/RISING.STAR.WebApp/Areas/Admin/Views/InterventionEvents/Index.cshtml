@model IEnumerable<RISING.STAR.DAL.InterventionEvent>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <div class="row">

        <div class="col-md-2">
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
        </div>

        <div class="col-md-2">
            <a href="@Url.Action("AdminDash", "Admin", new { Area = "" })">
                Back to Admin Dashboard
            </a>
        </div>

    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Eye)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Acquisitions_Table.OS_OD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterventionType.Description)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Eye)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Acquisitions_Table.OS_OD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InterventionType.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.InterventionEventGuid }) |
                @Html.ActionLink("Details", "Details", new { id=item.InterventionEventGuid }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.InterventionEventGuid })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
