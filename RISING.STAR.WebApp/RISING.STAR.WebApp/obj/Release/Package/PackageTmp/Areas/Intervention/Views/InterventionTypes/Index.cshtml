@model IEnumerable<RISING.STAR.DAL.InterventionType>

@{
    ViewBag.Title = "Intervention Types";
    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

    <h2>Intervention Types</h2>

    <div class="row">

        <div class="col-md-2">
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
        </div>

        <div class="col-md-2">
            <a href="@Url.Action("AdminDash", "Admin", new { Area = "" })">
                Back to Admin Dashboard
            </a>
        </div>

    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterventionCategory.CategoryDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterventionIcon.IconDescription)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InterventionCategory.CategoryDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InterventionIcon.IconDescription)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.InterventionGuid }) |
                    @Html.ActionLink("Details", "Details", new { id = item.InterventionGuid }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.InterventionGuid })
                </td>
            </tr>
        }

    </table>

</div>