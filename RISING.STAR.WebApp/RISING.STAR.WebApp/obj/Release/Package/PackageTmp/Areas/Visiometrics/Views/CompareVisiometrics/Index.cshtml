
@{
    ViewBag.Title = "Compare Visiometrics Reports";
    Layout = "~/Views/Shared/_LayoutInner.cshtml";
}


<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="btn-group btn-group-justified" role="group" id="btnGroup">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-primary btns" data-type="2">Objective Scatter</button>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-primary btns" data-type="5">Tear Film Reports</button>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-primary btns" data-type="6">Purkinje Reports</button>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-primary btns" data-type="3">PseudoAccomodation</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <select id="leftDropdown" class="form-control"></select>
                    </div>   
                </div>
                <div class="col-md-12">
                    <div id="leftPDF"></div>
                </div>
            </div>             
        </div>

        <div class="col-md-6">
             <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <select id="rightDropdown" class="form-control"></select>                        
                    </div>                   
                </div>
                <div class="col-md-12">
                    <div id="rightPDF"></div>
                </div>
            </div>
        </div>

    </div>

    <div class="row"></div>

</div>

@section JavaScript
{
    <script type="text/javascript" src="@Url.Content("~/Scripts/app/Visiometrics/compareVisiometrics.js")"></script>
}
