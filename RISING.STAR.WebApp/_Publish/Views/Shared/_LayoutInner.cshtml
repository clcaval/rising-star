                <a href="~/TearFilmOcularScatter">
                    <i class="fa fa-bar-chart" aria-hidden="true"></i>&nbsp;&nbsp;Tear Film Ocular Scatter
                </a>
            </li>
            <li>
                <a href="~/TearFilmTrendline">
                    <i class="fa fa-bar-chart" aria-hidden="true"></i>&nbsp;&nbsp;Tear Film Trendline
                </a>
            </li>
